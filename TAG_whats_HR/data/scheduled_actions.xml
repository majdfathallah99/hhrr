<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- مهمة مجدولة لإرسال رسائل الواتساب المعلقة -->
        <record id="ir_cron_send_pending_whatsapp" model="ir.cron">
            <field name="name">WhatsApp: Send Pending Messages</field>
            <field name="model_id" ref="model_adv_whatsapp_out"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_pending()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
