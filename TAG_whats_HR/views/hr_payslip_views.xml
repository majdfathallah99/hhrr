<odoo>
    <record id="hr_payslip_form_inherit_whatsapp" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit.whatsapp</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_send_whatsapp_text"
                        string="Send WhatsApp"
                        type="object"
                        class="oe_highlight"
                       />

                <button name="action_send_whatsapp_pdf_direct"
                        string="Send WhatsApp PDF"
                        type="object"
                        class="btn-secondary"
                       />
            </header>
        </field>
    </record>
</odoo>








