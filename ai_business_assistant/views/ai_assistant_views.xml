
<odoo>
    <record id="action_ai_assistant_app" model="ir.actions.act_url">
        <field name="name">AI Assistant</field>
        <field name="type">ir.actions.act_url</field>
        <field name="url">/ai_assistant_plain</field>
        <field name="target">self</field>
    </record>
    <menuitem id="menu_ai_app_root" name="AI Assistant" action="action_ai_assistant_app" sequence="20"/>

    <record id="action_ai_assistant_log" model="ir.actions.act_window">
        <field name="name">AI Assistant Logs</field>
        <field name="res_model">ai.assistant.log</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_ai_logs" name="Logs" parent="menu_ai_app_root" action="action_ai_assistant_log" sequence="30"/>

    <record id="action_ai_res_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_ai_settings" name="Settings" parent="menu_ai_app_root" action="action_ai_res_config_settings" sequence="10"/>

    <!-- Inherited block in General Settings -->
    <record id="res_config_settings_view_form_ai" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ai.assistant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" string="AI Business Assistant" data-string="AI Business Assistant">
                    <h2>AI Business Assistant</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ai_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ai_enabled"/>
                                <div class="text-muted">Enable the AI assistant for natural language analytics.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ai_provider"/>
                                <field name="ai_model"/>
                                <field name="ai_api_key" password="True"/>
                                <field name="ai_base_url"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ai_provider"/>
                                <div class="text-muted">Choose your LLM provider and model. For Groq/Ollama set Base URL accordingly.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
