<odoo>
    <!-- Standalone settings form view (no inherit) -->
    <record id="view_ai_res_config_settings_form" model="ir.ui.view">
        <field name="name">ai.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="AI Business Assistant Settings">
                <sheet>
                    <group string="General">
                        <field name="ai_enabled"/>
                        <field name="ai_voice_enabled"/>
                        <field name="ai_allow_companies" widget="many2many_tags"/>
                    </group>
                    <group string="OpenAI / Provider">
                        <field name="ai_provider"/>
                        <field name="ai_model"/>
                        <field name="ai_api_key" password="True"/>
                        <field name="ai_base_url"/>
                    </group>
                    <div class="o_form_label">How to use</div>
                    <div class="o_form_label">Open the voice/chat UI at /ai_assistant (must be logged in).</div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open our settings -->
    <record id="action_ai_res_config_settings" model="ir.actions.act_window">
        <field name="name">AI Assistant Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_ai_res_config_settings_form"/>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>

    <!-- Settings menu under the app root -->
</odoo>