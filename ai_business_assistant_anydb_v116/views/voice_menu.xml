<odoo>
  <data>
    <!-- Launch the voice UI -->
    <record id="action_ai_voice_ui" model="ir.actions.act_url">
      <field name="name">AI Voice Assistant</field>
      <field name="type">ir.actions.act_url</field>
      <field name="url">/ai_voice</field>
      <field name="target">self</field>
    </record>

    <!-- If your module already has a top-level menu, we attach under it; else create one -->
    <menuitem id="menu_ai_voice_root" name="AI Voice" sequence="99"/>
    <menuitem id="menu_ai_voice_ui" name="Voice Chat" parent="menu_ai_voice_root" action="action_ai_voice_ui"/>
  
    <!-- Show app icon on home/app switcher -->
    <record id="menu_ai_voice_root" model="ir.ui.menu">
      <field name="web_icon">ai_business_assistant_anydb_v116,static/description/icon.png</field>
      <field name="sequence">98</field>
    </record>

  </data>
</odoo>