<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">

    <!-- Open the minimal voice/chat page -->
    <record id="action_ai_voice_url" model="ir.actions.act_url">
      <field name="name">AI Voice</field>
      <field name="type">ir.actions.act_url</field>
      <field name="url">/ai_assistant_minimal</field>
      <field name="target">self</field>
    </record>

    <!-- Top-level menu (home-screen app tile) -->
    <menuitem id="menu_ai_voice_root"
              name="AI Voice"
              action="action_ai_voice_url"
              sequence="5"
              groups="base.group_user"
              web_icon="ai_business_assistant_anydb_v130,static/description/icon.png"/>
  </data>
</odoo>
