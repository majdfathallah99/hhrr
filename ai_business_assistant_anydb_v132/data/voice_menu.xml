<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">

    <!-- URL action stays the same -->
    <record id="action_ai_voice_url" model="ir.actions.act_url">
      <field name="name">AI Voice</field>
      <field name="type">ir.actions.act_url</field>
      <field name="url">/ai_assistant_minimal</field>
      <field name="target">self</field>
    </record>

    <!-- Make this a SUBMENU under your existing app root -->
    <!-- 🔁 REPLACE ai_business_assistant.menu_ai_app_root with your actual External ID -->
    <menuitem id="menu_ai_voice_root"
              name="Voice"
              parent="ai_business_assistant.menu_ai_app_root"
              action="action_ai_voice_url"
              sequence="40"
              groups="base.group_user"/>
    <!-- Note: no web_icon here (only root menus should have one). -->
  </data>
</odoo>
