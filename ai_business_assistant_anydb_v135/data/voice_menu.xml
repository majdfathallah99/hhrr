<odoo>
  <data noupdate="1">

    <!-- Root app menu for AI Assistant (shows one icon on the home screen) -->
    <menuitem id="menu_ai_app_root"
              name="AI Assistant"
              sequence="15"
              web_icon="ai_business_assistant_anydb_v134,static/description/icon.png"
              groups="base.group_user"/>

    <!-- Open Chat (frontend) -->
    <record id="action_ai_chat_url" model="ir.actions.act_url">
      <field name="name">AI Assistant</field>
      <field name="type">ir.actions.act_url</field>
      <field name="url">/ai_assistant</field>
      <field name="target">self</field>
    </record>

    <menuitem id="menu_ai_chat"
              name="Chat"
              parent="menu_ai_app_root"
              action="action_ai_chat_url"
              sequence="10"
              groups="base.group_user"/>

    <!-- Open Voice mode (frontend) -->
    <record id="action_ai_voice_url" model="ir.actions.act_url">
      <field name="name">AI Voice</field>
      <field name="type">ir.actions.act_url</field>
      <field name="url">/ai_assistant/voice</field>
      <field name="target">self</field>
    </record>

    <menuitem id="menu_ai_voice"
              name="Voice"
              parent="menu_ai_app_root"
              action="action_ai_voice_url"
              sequence="20"
              groups="base.group_user"/>

  </data>
</odoo>
