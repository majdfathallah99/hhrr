<odoo>
    <record id="res_config_settings_view_form_ai_voice_integrated" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ai.voice.integrated</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app-settings-block" data-string="AI Voice Chat" string="AI Voice Chat">
                    <h2>AI Voice Chat</h2>
                    <div class="row mt16">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_voice_chat_endpoint" placeholder="https://api.openai.com/v1/chat/completions"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_voice_chat_endpoint"/>
                                    <div class="text-muted">Leave empty to use demo echo.</div>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_voice_api_key" password="True"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_voice_api_key"/>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_voice_api_header_name" placeholder="Authorization"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_voice_api_header_name"/>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_voice_model_hint" placeholder="gpt-4o-mini"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_voice_model_hint"/>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ai_voice_temperature"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ai_voice_temperature"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
