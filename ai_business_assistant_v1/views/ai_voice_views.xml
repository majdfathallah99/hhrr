
<odoo>
    <!-- Client Action -->
    <record id="action_open_voice_chat" model="ir.actions.client">
        <field name="name">Live Voice Chat</field>
        <field name="tag">ai_voice_chat_client</field>
    </record>

    <!-- Put a button on the module home (a top-level menu) -->
    <menuitem id="menu_ai_voice_root"
              name="Live Voice Chat"
              parent="base.menu_custom" sequence="10"
              action="action_open_voice_chat"
              groups="base.group_user"/>

    <!-- Voice Room model simple tree/form -->
    <record id="view_ai_voice_room_tree" model="ir.ui.view">
        <field name="name">ai.voice.room.tree</field>
        <field name="model">ai.voice.room</field>
        <field name="arch" type="xml">
            <tree string="Voice Rooms">
                <field name="name"/>
                <field name="room_key"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_voice_room_form" model="ir.ui.view">
        <field name="name">ai.voice.room.form</field>
        <field name="model">ai.voice.room</field>
        <field name="arch" type="xml">
            <form string="Voice Room">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="room_key" readonly="1"/>
                        <field name="active"/>
                        <field name="linked_model"/>
                        <field name="linked_res_id"/>
                        <field name="notes"/>
                        <field name="participant_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button string="Open Live Voice" type="action"
                                context="{'default_room_key': room_key}"
                                class="btn-primary"
                                name="%(action_open_voice_chat)d"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_voice_room" model="ir.actions.act_window">
        <field name="name">Voice Rooms</field>
        <field name="res_model">ai.voice.room</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ai_voice_rooms" name="Voice Rooms" parent="menu_ai_voice_root" action="action_ai_voice_room" sequence="20"/>

    <!-- Settings -->
    <!-- Sequence -->
    <record id="seq_ai_voice_room" model="ir.sequence">
        <field name="name">AI Voice Room</field>
        <field name="code">ai.voice.room</field>
        <field name="prefix">VROOM-</field>
        <field name="padding">4</field>
    </record>
</odoo>
