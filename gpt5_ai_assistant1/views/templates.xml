<odoo>
  <template id="gpt5_chat_page" name="GPT-5 Assistant Page">
    <t t-call="web.html_container">
      <t t-set="title">GPT-5 Assistant</t>
      <div class="o_container mt16">
        <div class="o_row">
          <div class="o_col col-12 col-lg-8">
            <div class="gpt5-chat-card" style="border:1px solid #ddd;border-radius:12px;padding:12px;max-height:70vh;display:flex;flex-direction:column;">
              <div id="gpt5_chat_messages" style="flex:1;overflow:auto;padding:8px;"></div>
              <div style="display:flex;gap:8px;">
                <input id="gpt5_chat_input" type="text" class="o_input" placeholder="اكتب سؤالك هنا… / Type your question…"/>
                <button id="gpt5_send_btn" class="btn btn-primary">Send</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
