
<odoo>
  <data noupdate="1">
    <record id="group_gpt_assistant_user" model="res.groups">
      <field name="name">GPT Assistant User</field>
      <field name="category_id" ref="base.module_category_productivity"/>
    </record>

    <record id="group_gpt_assistant_manager" model="res.groups">
      <field name="name">GPT Assistant Manager</field>
      <field name="implied_ids" eval="[(4, ref('group_gpt_assistant_user'))]"/>
      <field name="category_id" ref="base.module_category_productivity"/>
    </record>

    <record id="group_gpt_assistant_superuser" model="res.groups">
      <field name="name">GPT Assistant Superuser</field>
      <field name="implied_ids" eval="[(4, ref('group_gpt_assistant_manager'))]"/>
      <field name="category_id" ref="base.module_category_productivity"/>
      <field name="comment">Grants ability to enable Sudo Mode and Allow All Models on threads.</field>
    </record>
  </data>
</odoo>
