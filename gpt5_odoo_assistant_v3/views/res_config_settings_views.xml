
<odoo>
  <data>
    <record id="res_config_settings_view_form_gpt5" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.gpt5.v2</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.view_res_config_settings"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
          <div class="app_settings_block" data-string="GPT-5 Assistant" string="GPT-5 Assistant" data-key="gpt5_assistant">
            <h2>GPT-5 Assistant</h2>
            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6">
                <div class="o_setting_box">
                  <div class="o_setting_left">
                    <field name="gpt5_base_url"/>
                    <field name="gpt5_model"/>
                    <field name="gpt5_api_key" password="True"/>
                  </div>
                  <div class="o_setting_right">
                    <label for="gpt5_base_url"/>
                    <div class="text-muted">Base URL (default: https://api.openai.com/v1)</div>
                    <label for="gpt5_model"/>
                    <div class="text-muted">Model name, e.g. gpt-5, gpt-4o-mini</div>
                    <label for="gpt5_api_key"/>
                    <div class="text-muted">API key stored in ir.config_parameter</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
