<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="action_grok_ui" model="ir.actions.act_url">
    <field name="name">Grok Assistant</field>
    <field name="type">ir.actions.act_url</field>
    <field name="url">/grok/ui</field>
    <field name="target">self</field>
  </record>

  <menuitem id="menu_grok_root" name="Grok Assistant" sequence="10"/>
  <menuitem id="menu_grok_ui" name="Open Assistant" parent="menu_grok_root" action="action_grok_ui" sequence="10"/>

  <record id="view_grok_session_tree" model="ir.ui.view">
    <field name="name">grok.assistant.session.tree</field>
    <field name="model">grok.assistant.session</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="create_date"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_grok_session_form" model="ir.ui.view">
    <field name="name">grok.assistant.session.form</field>
    <field name="model">grok.assistant.session</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
          </group>
          <notebook>
            <page string="Messages">
              <field name="message_ids">
                <tree editable="bottom">
                  <field name="role"/>
                  <field name="content"/>
                  <field name="create_date" readonly="1"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_grok_sessions" model="ir.actions.act_window">
    <field name="name">Sessions</field>
    <field name="res_model">grok.assistant.session</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="menu_grok_sessions" name="Sessions" parent="menu_grok_root" action="action_grok_sessions" sequence="20"/>
</odoo>