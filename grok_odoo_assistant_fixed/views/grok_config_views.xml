<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_grok_config_form" model="ir.ui.view">
    <field name="name">grok.config.settings.form</field>
    <field name="model">grok.config.settings</field>
    <field name="arch" type="xml">
      <form string="Grok Settings">
        <group>
          <field name="grok_api_key" password="True"/>
          <field name="grok_model"/>
          <field name="grok_temperature"/>
          <field name="grok_allowed_models"/>
        </group>
        <footer>
          <button name="action_save" type="object" string="Save" class="btn-primary"/>
          <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_grok_config" model="ir.actions.act_window">
    <field name="name">Grok Settings</field>
    <field name="res_model">grok.config.settings</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
  <menuitem id="menu_grok_config" name="Grok Settings" parent="menu_grok_root" action="action_grok_config" sequence="30"/>
</odoo>