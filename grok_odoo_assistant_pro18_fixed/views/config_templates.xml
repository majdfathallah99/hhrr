<odoo>
    <template id="config_page" name="Grok Assistant Settings">
        <t t-call="web.layout">
            <div class="oe_structure"/>
            <div class="container" style="max-width: 920px; margin: 2rem auto;">
                <h2>Grok Assistant Settings</h2>
                <p style="opacity:.7;">Admins only. Keys are stored in ir.config_parameter.</p>
                <form action="/grok/config/save" method="post" style="display:grid; grid-template-columns:1fr 1fr; gap:1rem;">
                    <label>Provider
                        <select name="grok_provider">
                            <option t-att-selected="'xai' == grok_provider" value="xai">xAI (Grok)</option>
                            <option t-att-selected="'groq' == grok_provider" value="groq">Groq</option>
                            <option t-att-selected="'openai' == grok_provider" value="openai">OpenAI</option>
                            <option t-att-selected="'custom' == grok_provider" value="custom">Custom</option>
                        </select>
                    </label>
                    <label>API Base URL (optional)
                        <input type="text" name="grok_endpoint" t-att-value="grok_endpoint or ''"/>
                    </label>
                    <label>Model
                        <input type="text" name="grok_model" t-att-value="grok_model or ''"/>
                    </label>
                    <label>API Key
                        <input type="password" name="grok_api_key" t-att-value="grok_api_key or ''"/>
                    </label>
                    <label>Temperature
                        <input type="number" step="0.1" name="grok_temperature" t-att-value="grok_temperature or 0.2"/>
                    </label>
                    <label>Allowed Odoo Models (comma-separated)
                        <input type="text" name="grok_allowed_models" t-att-value="grok_allowed_models or ''"/>
                    </label>
                    <div style="grid-column:1 / -1;">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <a class="btn btn-secondary" href="/grok/ui">Open Assistant</a>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
