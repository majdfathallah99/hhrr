
<odoo>
  <record id="view_hr_bonus_type_tree" model="ir.ui.view">
    <field name="name">hr.bonus.type.tree</field>
    <field name="model">hr.bonus.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="amount_type"/>
        <field name="amount_fixed"/>
        <field name="percent_of_wage"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
  <record id="view_hr_bonus_type_form" model="ir.ui.view">
    <field name="name">hr.bonus.type.form</field>
    <field name="model">hr.bonus.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="amount_type"/>
            <field name="amount_fixed" invisible="[['amount_type','!=','fixed']]" />
            <field name="percent_of_wage" invisible="[['amount_type','!=','percent']]" />
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
