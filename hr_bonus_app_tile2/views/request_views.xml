
<odoo>
  <record id="view_hr_bonus_request_tree" model="ir.ui.view">
    <field name="name">hr.bonus.request.tree</field>
    <field name="model">hr.bonus.request</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="employee_id"/>
        <field name="department_id"/>
        <field name="type_id"/>
        <field name="amount"/>
        <field name="request_date"/>
        <field name="state"/>
      </tree>
    </field>
  </record>
  <record id="view_hr_bonus_request_form" model="ir.ui.view">
    <field name="name">hr.bonus.request.form</field>
    <field name="model">hr.bonus.request</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_submit" type="object" string="Submit" class="oe_highlight"/>
          <button name="action_approve" type="object" string="Approve"/>
          <button name="action_refuse" type="object" string="Refuse"/>
          <button name="action_mark_paid" type="object" string="Mark Paid"/>
          <button name="action_reset_to_draft" type="object" string="Reset to Draft"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,paid,refused"/>
        </header>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="employee_id"/>
            <field name="department_id" readonly="1"/>
            <field name="type_id"/>
            <field name="amount"/>
            <field name="request_date"/>
            <field name="note"/>
          </group>
          <chatter/>
        </sheet>
      </form>
    </field>
  </record>
  <record id="view_hr_bonus_request_search" model="ir.ui.view">
    <field name="name">hr.bonus.request.search</field>
    <field name="model">hr.bonus.request</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="employee_id"/>
        <field name="department_id"/>
        <field name="type_id"/>
        <filter string="My Department" name="my_dep" domain="[('department_id','=',user.employee_id.department_id.id)]"/>
        <filter string="To Approve" name="to_approve" domain="[('state','=','to_approve')]"/>
        <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
        <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
        <group expand="0" string="Group By">
          <filter string="Department" context="{'group_by':'department_id'}"/>
          <filter string="Type" context="{'group_by':'type_id'}"/>
          <filter string="State" context="{'group_by':'state'}"/>
        </group>
      </search>
    </field>
  </record>
</odoo>
