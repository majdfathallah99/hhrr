
<odoo>
    <!-- Employees see their own bonus requests -->
    <record id="hr_bonus_request_rule_employee_own" model="ir.rule">
        <field name="name">Bonus Requests: employee own</field>
        <field name="model_id" ref="model_hr_bonus_request"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- HR sees all -->
    <record id="hr_bonus_request_rule_hr_all" model="ir.rule">
        <field name="name">Bonus Requests: HR all</field>
        <field name="model_id" ref="model_hr_bonus_request"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>
</odoo>
