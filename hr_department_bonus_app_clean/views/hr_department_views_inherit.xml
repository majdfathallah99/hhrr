
<odoo>
    <record id="view_department_form_bonus_budget" model="ir.ui.view">
        <field name="name">hr.department.form.bonus.budget</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group string="Bonus Budget">
                    <field name="bonus_budget"/>
                    <field name="bonus_spent" readonly="1"/>
                    <field name="bonus_remaining" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
