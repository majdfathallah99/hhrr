
<odoo>
    <record id="view_hr_bonus_request_tree" model="ir.ui.view">
        <field name="name">hr.bonus.request.tree</field>
        <field name="model">hr.bonus.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="bonus_type_id"/>
                <field name="amount"/>
                <field name="request_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_bonus_request_kanban" model="ir.ui.view">
        <field name="name">hr.bonus.request.kanban</field>
        <field name="model">hr.bonus.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="employee_id"/></div>
                            <div><field name="department_id"/></div>
                            <div><field name="amount"/></div>
                            <div><field name="state"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_hr_bonus_request_form" model="ir.ui.view">
        <field name="name">hr.bonus.request.form</field>
        <field name="model">hr.bonus.request</field>
        <field name="arch" type="xml">
            <form string="Bonus Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_manager_approve" string="Approve" type="object" invisible="state != 'to_approve' or not can_approve" class="btn-primary"/>
                    <button name="action_mark_paid" string="Mark Paid" type="object" invisible="state != 'approved' or not can_pay" class="btn-primary"/>
                    <button name="action_refuse" string="Refuse" type="object" invisible="not (state in ('to_approve', 'approved'))" class="btn-secondary"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="not (state in ('draft','to_approve','approved','refused'))" class="btn-secondary"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="not (state in ('refused','cancelled'))"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,paid,refused,cancelled"/>
                </header>
                <sheet>
                    <group invisible="1">
                        <field name="can_approve" readonly="1"/>
                        <field name="can_pay" readonly="1"/>
                    </group>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}" required="1"/>
                            <field name="department_id" required="1"/>
                            <field name="request_date"/>
                            <field name="bonus_type_id" required="1"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="manager_id" readonly="1"/>
                            <field name="hr_user_id" readonly="1" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hr_bonus_request_search" model="ir.ui.view">
        <field name="name">hr.bonus.request.search</field>
        <field name="model">hr.bonus.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="bonus_type_id"/>
                <filter string="My Requests" name="my" domain="[('employee_id.user_id','=',uid)]"/>
                <filter string="To Approve" name="to_approve" domain="[('state','=','to_approve')]"/>
                <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
                <filter string="Refused" name="refused" domain="[('state','=','refused')]"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="group_dep" context="{'group_by': 'department_id'}"/>
                    <filter string="Employee" name="group_emp" context="{'group_by': 'employee_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_bonus_request" model="ir.actions.act_window">
        <field name="name">Bonus Requests</field>
        <field name="res_model">hr.bonus.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my': 1}</field>
    </record>
</odoo>
