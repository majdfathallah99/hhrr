
<odoo>
    <record id="view_department_form_inherit_bonus" model="ir.ui.view">
        <field name="name">hr.department.form.inherit.bonus</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group string="Bonuses">
                    <field name="bonus_budget"/>
                    <field name="bonus_spent" readonly="1"/>
                    <field name="bonus_remaining" readonly="1"/>
                    <button type="action" name="%(action_hr_bonus_request)d" class="oe_stat_button" icon="fa-money" string="Bonus Requests" context="{'search_default_department_id': active_id}">
                        <field name="bonus_request_count" widget="statinfo" string="Requests"/>
                    </button>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
