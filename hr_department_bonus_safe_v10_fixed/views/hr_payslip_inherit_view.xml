
<odoo>
    <record id="view_hr_payslip_form_inherit_bonus" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit.bonus.sync</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_sync_bonus_inputs" type="object" string="Sync Bonus Inputs" class="oe_highlight"
                    attrs="{'invisible': [('state','not in',('draft','verify'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>
