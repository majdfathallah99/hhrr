<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Employees → Configuration → Settings -->
    <record id="res_config_settings_view_form_inherit_timeoff_lateblock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.timeoff.lateblock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='hr']" position="inside">
                <block name="timeoff_policy_block" title="Time Off Policy">
                    <setting id="restrict_late_timeoff_submission_setting"
                             string="Block late Time Off submissions (> 2 days)">
                        <field name="restrict_late_timeoff_submission"/>
                        <div class="text-muted">
                            Prevent submitting a Time Off request more than 2 days after its start date.
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>