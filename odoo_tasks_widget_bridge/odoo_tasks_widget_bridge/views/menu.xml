<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_my_tasks_widget" model="ir.actions.act_window">
        <field name="name">My Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="domain">["|", ["user_id","=",uid], ["user_ids","in",[uid]]]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Only the tasks assigned to you are shown here.</p>
        </field>
    </record>

    <menuitem id="menu_root_my_tasks_widget"
              name="My Tasks"
              sequence="3"
              action="action_my_tasks_widget"
              web_icon="odoo_tasks_widget_bridge,static/description/icon.png"/>
</odoo>
