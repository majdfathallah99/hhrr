<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_inherit_widget_token" model="ir.ui.view">
        <field name="name">res.users.form.widget.token</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='preferences']" position="inside">
                <group string="Widget Integration">
                    <field name="widget_token" readonly="1" placeholder="Press Generate to create"/>
                    <button name="action_generate_widget_token"
                            string="Generate Token"
                            type="object"
                            class="btn-primary"/>
                    <label string="Share this token with the Android app only. Treat it like a password."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
