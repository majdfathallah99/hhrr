<odoo>
    <record id="view_users_form_inherit_widget_token" model="ir.ui.view">
        <field name="name">res.users.form.widget.token</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <field name="widget_token" readonly="1"/>
                <button name="action_generate_widget_token"
                        type="object"
                        string="Generate Widget Token"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
