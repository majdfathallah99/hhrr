<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Top-level menu creates an app tile on Home screen -->
    <menuitem id="menu_task_widget_root"
              name="Task Widget"
              sequence="15"
              groups="base.group_user"/>

    <menuitem id="menu_task_widget_saved_items"
              name="My Saved Tasks"
              parent="menu_task_widget_root"
              action="action_task_widget_saved_items"
              sequence="10"
              groups="base.group_user"/>

    <record id="action_task_widget_refresh_url" model="ir.actions.act_url">
      <field name="name">Refresh My Saved Tasks</field>
      <field name="url">/task_widget/refresh</field>
      <field name="target">self</field>
    </record>

    <menuitem id="menu_task_widget_refresh"
              name="Refresh My Saved Tasks"
              parent="menu_task_widget_root"
              action="action_task_widget_refresh_url"
              sequence="20"
              groups="base.group_user"/>
  </data>
</odoo>