<odoo>
    <record id="view_order_form_clone" model="ir.ui.view">
        <field name="name">sale.order.form.clone</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <label string="This is the Cloned Sales View"/>
            </xpath>
        </field>
    </record>
</odoo>